---
import {Picture} from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';

interface Props {
    date: Date;
    title: string;
    image: ImageMetadata;
    lang: 'de' | 'en';
    pageBody: string;
}

const {date, title, image, lang, pageBody} = Astro.props;
const formattedDate = date.toLocaleString(lang, {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
});

const pageDescription = pageBody.slice(0, 200) + 'â€¦';
---

<style>
    div :global(a) {
        color: var(--color-main-green);
    }
    div :global(a:hover) {
        text-decoration: underline;
    }
    div :global(h2) {
        margin-top: 1rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        font-weight: s emibold;
    }
    div :global(ul) {
        list-style-type: disc;
        padding-left: 1.5rem;
    }
    div :global(ol) {
        list-style-type: decimal;
        padding-left: 1.5rem;
    }
    div :global(pre) {
        padding: 1rem;
    }
</style>

<Layout title={title} description={pageDescription}>
    <Section>
        <div class="mx-auto w-full text-justify">
            <Picture class="w-full rounded-xl object-cover" src={image} alt={title} />
            <p class="my-8 text-xs text-gray-500 dark:text-neutral-500">
                {formattedDate}
            </p>
            <div class="space-y-4 text-base">
                <slot />
            </div>
        </div>
    </Section>
</Layout>
