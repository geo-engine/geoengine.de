---
import {Icon} from 'astro-icon/components';
import {Image} from 'astro:assets';

interface Props {
    name: string;
    title: string;
    image: ImageMetadata;
    linkedin?: string;
    twitter?: string;
    website?: string;
}

const {name, title, image, linkedin, twitter, website} = Astro.props;
---

<div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:gap-4">
    <Image class="size-20 rounded-lg" src={image} alt={name} />

    <div class="grow">
        <div>
            <h3 class="font-medium text-gray-800 dark:text-neutral-200">{name}</h3>
            <p class="mt-1 text-xs text-gray-500 uppercase dark:text-neutral-500">{title}</p>
        </div>

        <!-- Social Brands -->
        <div class="mt-2 space-x-2.5 sm:mt-auto">
            {
                linkedin && (
                    <a
                        class="inline-flex items-center justify-center rounded-full text-gray-500 hover:text-gray-800 focus:text-gray-800 focus:outline-hidden dark:text-neutral-500 dark:hover:text-neutral-200 dark:focus:text-neutral-200"
                        href={linkedin}
                    >
                        <Icon name="mdi:linkedin" class="size-3.5 shrink-0" />
                    </a>
                )
            }
            {
                twitter && (
                    <a
                        class="inline-flex items-center justify-center rounded-full text-gray-500 hover:text-gray-800 focus:text-gray-800 focus:outline-hidden dark:text-neutral-500 dark:hover:text-neutral-200 dark:focus:text-neutral-200"
                        href={twitter}
                    >
                        <Icon name="mdi:twitter" class="size-3.5 shrink-0" />
                    </a>
                )
            }
            {
                website && (
                    <a
                        class="inline-flex items-center justify-center rounded-full text-gray-500 hover:text-gray-800 focus:text-gray-800 focus:outline-hidden dark:text-neutral-500 dark:hover:text-neutral-200 dark:focus:text-neutral-200"
                        href={website}
                    >
                        <Icon name="mdi:web" class="size-3.5 shrink-0" />
                    </a>
                )
            }
        </div>
        <!-- End Social Brands -->
    </div>
</div>
